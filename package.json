{
  "name": "autocommit-np",
  "displayName": "AutoCommit by NP",
  "description": "Generates Git commit messages using AI ",
  "version": "1.2.2",
  "icon": "images/icon.png",
  "publisher": "nishant0121",
  "engines": {
    "vscode": "^1.100.0"
  },
  "categories": [
    "Other"
  ],
  "type": "module",
  "activationEvents": [
    "onView:autocommit.sidebar",
    "onCommand:extension.generateCommitMessage",
    "onCommand:extension.toggleConventionalCommits",
    "onCommand:extension.toggleAutoFill",
    "onCommand:extension.setCommitTone",
    "onCommand:extension.setCustomPrompt",
    "onCommand:extension.toggleCustomPrompt",
    "onCommand:extension.toggleCrossCheck",
    "onCommand:extension.inlineCodeEdit"
  ],
  "main": "./extension.js",
  "contributes": {
    "viewsContainers": {
      "activitybar": [
        {
          "id": "autocommit-view-container",
          "title": "AutoCommit",
          "icon": "images/autocommit_icon.png"
        }
      ]
    },
    "views": {
      "autocommit-view-container": [
        {
          "id": "autocommit.sidebar",
          "name": "Actions"
        }
      ]
    },
    "commands": [
      {
        "command": "extension.generateCommitMessage",
        "title": "AutoCommit : Generate Git Commit Message ",
        "icon": "$(wand)"
      },
      {
        "command": "extension.toggleConventionalCommits",
        "title": "AutoCommit : Toggle Conventional Commits"
      },
      {
        "command": "extension.toggleAutoFill",
        "title": "AutoCommit : Toggle Auto Fill Commit Message"
      },
      {
        "command": "extension.setCommitTone",
        "title": "AutoCommit : Set Commit Tone"
      },
      {
        "command": "extension.setCustomPrompt",
        "title": "AutoCommit : Set Custom Prompt"
      },
      {
        "command": "extension.toggleCustomPrompt",
        "title": "AutoCommit : Toggle Custom Prompt"
      },
      {
        "command": "extension.toggleCrossCheck",
        "title": "AutoCommit : Toggle Commit Cross-Check"
      },
      {
        "command": "extension.inlineCodeEdit",
        "title": "AutoCommit : Inline Code Edit",
        "icon": "$(edit)"
      }
    ],
    "keybindings": [
      {
        "command": "extension.inlineCodeEdit",
        "key": "ctrl+alt+k",
        "mac": "cmd+alt+k",
        "when": "editorHasSelection"
      },
      {
        "command": "extension.generateCommitMessage",
        "key": "ctrl+alt+c",
        "mac": "cmd+alt+c"
      }
    ],
    "configuration": {
      "title": "Commit Message Generator",
      "properties": {
        "commitMessageGenerator.apiKey": {
          "type": "string",
          "description": "Your Gemini API key for generating commit messages.",
          "default": ""
        },
        "commitMessageGenerator.autoFill": {
          "type": "boolean",
          "description": "Automatically populate the Source Control commit message box.",
          "default": true
        },
        "commitMessageGenerator.useConventionalCommits": {
          "type": "boolean",
          "default": false,
          "description": "Enforce Conventional Commits format (e.g., feat:, fix:, chore:, docs:, etc.)."
        },
        "commitMessageGenerator.tone": {
          "type": "string",
          "default": "Professional",
          "description": "Select the personality or style of the generated commit message.",
          "enum": [
            "Professional",
            "Bollywood Drama",
            "Star Wars",
            "Film Noir",
            "Marvel",
            "The Godfather",
            "Anime Shonen",
            "Anime Tsundere",
            "Pirate",
            "Medieval",
            "Cyberpunk",
            "Robot",
            "Shakespearean",
            "Haiku",
            "Passive Aggressive"
          ]
        },
        "commitMessageGenerator.useCustomPrompt": {
          "type": "boolean",
          "default": false,
          "description": "Enable the use of a custom prompt, overriding other tone settings."
        },
        "commitMessageGenerator.customPrompt": {
          "type": "string",
          "default": "",
          "description": "Enter a custom system instruction. If this is set, it overrides the 'Tone' setting."
        },
        "commitMessageGenerator.crossCheck": {
          "type": "boolean",
          "default": false,
          "description": "Enable interactive review menu (Accept/Regenerate) before populating the commit message."
        }
      }
    },
    "menus": {
      "scm/title": [
        {
          "command": "extension.generateCommitMessage",
          "group": "navigation",
          "when": "scmProvider == git"
        }
      ]
    }
  },
  "scripts": {
    "lint": "eslint .",
    "pretest": "npm run lint",
    "test": "vscode-test"
  },
  "devDependencies": {
    "@types/mocha": "^10.0.10",
    "@types/node": "20.x",
    "@types/vscode": "^1.100.0",
    "@vscode/test-cli": "^0.0.10",
    "@vscode/test-electron": "^2.4.1",
    "eslint": "^9.23.0",
    "@vscode/vsce": "^3.2.1"
  },
  "dependencies": {
    "@vscode/vsce": "^3.6.0",
    "axios": "^1.9.0",
    "dotenv": "^16.5.0"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/Nishant0121/AutoCommit"
  },
  "homepage": "https://github.com/Nishant0121/AutoCommit"
}
